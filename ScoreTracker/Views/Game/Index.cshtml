@model List<ScoreTracker.Models.Game>
<table data-toggle="table">
    <thead>
        <tr class="tr-class-1">
            <th colspan="3"><h2>Games</h2></th>
            <th data-width="100">
                <a asp-action="create" class="btn btn-primary">Create Game</a>
            </th>
        </tr>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Teams</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>
                    @game.Id
                </td>
                <td>
                </td>
                <td>
                    @foreach (var member in game.Teams)
                    {
                        <p class="badge text-bg-secondary">@member.Name </p>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="edit" asp-route-id="@game.Id" class="btn btn-primary disabled">Edit</a>
                        <a asp-action="delete" asp-route-id="@game.Id" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>